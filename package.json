{
    "name": "dopaminejs",
    "version": "1.0.2",
    "description": "A lightweight library for adding juice, rewards, and feedback to HTML5 games.",
    "main": "dist/dopamine.umd.js",
    "module": "dist/dopamine.mjs",
    "style": "dist/style.css",
    "files": [
        "dist",
        "src",
        "README.md",
        "LICENSE"
    ],
    "exports": {
        ".": {
            "import": "./dist/dopamine.mjs",
            "require": "./dist/dopamine.umd.js",
            "default": "./dist/dopamine.umd.js"
        },
        "./style.css": "./dist/style.css"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test": "vitest",
        "release": "node scripts/deploy.js",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "game-dev",
        "html5",
        "rewards",
        "particles",
        "feedback",
        "juice",
        "gamification"
    ],
    "author": "Gemini",
    "license": "MIT",
    "devDependencies": {
        "jsdom": "^27.2.0",
        "vite": "^5.0.0",
        "vitest": "^4.0.15"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/BaryoDev/dopaminejs.git"
    },
    "bugs": {
        "url": "https://github.com/BaryoDev/dopaminejs/issues"
    },
    "homepage": "https://github.com/BaryoDev/dopaminejs#readme"
}
